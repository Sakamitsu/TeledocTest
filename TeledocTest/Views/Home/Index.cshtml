@{
    ViewBag.Title = "Главная";
}
@model IEnumerable<ClientModel>

<button class="green-button"><p><a asp-action="Create">Добавить клиента</a></p></button>
<h2>Список клиентов:</h2>
<table class="table">
    <tr><th>Id</th><th>ИНН</th><th>Имя</th><th>Тип</th><th>Дата создания:</th><th>Дата обновления:</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Inn</td>
            <td>@item.Name</td>
            @if (item.Type == 0)
            {
                <td>ЮЛ</td>
            }
            else
            {
                <td>ИП</td>
            }
            <td>@item.CreatedDate</td>
            <td>@item.UpdatedDate</td>
            <td>
                <a class="green-button-founder" asp-action="Create" asp-controller="Founder" asp-route-clientId="@item.Id">Добавить учредителя</a>
            </td>
            <td>
                <a class="green-button-founder" asp-action="Index" asp-controller="Founder" asp-route-clientId="@item.Id">Список учредителей</a>
            </td>
            <td>
                <a class="edit-button" asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form asp-controller="Home" asp-action="Delete" method="post"  asp-route-id="@item.Id">
                    <input class="delete-button" type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>

<style>
    .green-button {
    background-color: #4CAF50;
    color: #fff;
    margin-top: 10px;
    padding: 10px 20px; 
    border: none; 
    border-radius: 5px; 
    cursor: pointer; 
    height: 30px;
    display: flex; 
    justify-content: center; 
    align-items: center; 
    }

    .green-button:hover {
        background-color: #45a049; 
    }

    .green-button a {
        text-decoration: none;
        padding: 15px 50px; 
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .table th {
        background-color: #333;
        color: white;
        padding: 10px;
        text-align: left;
    }

    .table tr {
        border-bottom: 1px solid #ccc;
    }

    .table td {
        padding: 10px;
    }

    .green-button-founder {
        background-color: #4CAF50;
        color: white;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 5px;
        margin-right: 5px;
    }

    .green-button-founder:hover {
        background-color: #45a049;
    }

    .edit-button {
        background-color: #007bff;
        color: white;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 5px;
        margin-right: 5px;
    }

    .edit-button:hover {
        background-color: #0056b3;
    }

    .delete-button {
        background-color: #ff4d4d;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .delete-button:hover {
        background-color: #ff3333;
    }
</style>
